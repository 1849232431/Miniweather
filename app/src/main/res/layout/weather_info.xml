<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/title"
        android:layout_width="fill_parent"
        android:layout_height="45.0dip"
        android:background="#ffcd2626"
        android:gravity="center_vertical">
        <ImageView
            android:id="@+id/title_city_manager"
            android:layout_width="45.0dip"
            android:layout_height="45.0dip"
            android:src="@drawable/title_city"/>
        <ImageView
            android:id="@+id/city_separater"
            android:layout_width="1.0dip"
            android:layout_height="40.0dip"
            android:layout_marginTop="2.0dip"
            android:layout_toRightOf="@id/title_city_manager"
            android:background="#A71717"/>
        <TextView
            android:id="@+id/title_city_name"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_toRightOf="@id/city_separater"
            android:Gravity="center_vertical"
            android:paddingLeft="5.0dip"
            android:text="天气状况"
            android:textColor="#ffffffff"
            android:textSize="40.0sp"/>
        <ImageView
            android:id="@+id/title_update_btn"
            android:layout_width="45.0dip"
            android:layout_height="45.0dip"
            android:layout_alignParentRight="true"
            android:layout_gravity="center"
            android:src="@drawable/title_update" />
        <ImageView
            android:id="@+id/title_share"
            android:layout_width="45.0dip"
            android:layout_height="45.0dip"
            android:layout_toLeftOf="@id/title_update_btn"
            android:src="@drawable/title_share"/>
        <ImageView
            android:id="@+id/title_location"
            android:layout_width="45.0dip"
            android:layout_height="45.0dip"
            android:layout_toLeftOf="@id/title_share"
            android:src="@drawable/base_action_bar_action_city"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/title"
        android:background="@drawable/biz_plugin_weather_shenzhen_bg"
        android:orientation="vertical"
        android:weightSum="1">
        <RelativeLayout
        android:id="@+id/weather_today"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="10.0dip">
        <TextView
            android:id="@+id/city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="15.0dip"
            android:singleLine="true"
            android:text="北京"
            android:textColor="@android:color/white"
            android:textSize="40.0dip"/>
            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="200.0dip"
                android:layout_marginTop="5.0dip"
                android:singleLine="true"
                android:text="今天18:25发布"
                android:textColor="@android:color/white"
                android:textSize="25.0sp"/>
            <TextView
                android:id="@+id/humidity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/time"
                android:layout_marginLeft="230.0dip"
                android:singleLine="true"
                android:text="湿度57%"
                android:textColor="@android:color/white"
                android:textSize="25.0sp"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/PM2.5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="PM2.5数值"
            android:textColor="@android:color/white"
            android:textSize="30.0sp"
            android:layout_gravity="right"
            android:layout_marginLeft="80dip"/>
        <TextView
            android:id="@+id/pm2.5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:layout_toRightOf="@id/PM2.5"
            android:layout_marginLeft="50dip"
            android:text="220"
            android:textColor="@android:color/white"
            android:textSize="30.0sp" />
        <LinearLayout
            android:id="@+id/pm2.5_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:orientation="horizontal"/>
    </LinearLayout>

        <ImageView
            android:id="@+id/icon_pm2.5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_gravity="right"
            android:src="@drawable/biz_plugin_weather_0_50"
            android:layout_marginTop="10dip"/>
        <TextView
            android:id="@+id/info_pm2.5"
            android:layout_width="56dp"
            android:layout_height="56sp"
            android:layout_below="@id/icon_pm2.5"
            android:text="轻度污染"
            android:textSize="25dip"
            android:singleLine="false"
            android:textColor="@android:color/white"
            android:layout_gravity="right"
            android:layout_marginRight="20dip"
            android:layout_marginTop="30dip"/>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/weather_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/sun"
            android:layout_width="170sp"
            android:layout_height="170sp"
            android:src="@drawable/biz_plugin_weather_qing"
            android:layout_gravity="left"
            android:layout_marginTop="150dip" />
        <TextView
            android:id="@+id/qing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="晴"
            android:textColor="@android:color/white"
            android:textSize="55dip"
            android:layout_marginLeft="55dip"
            android:layout_below="@+id/sun" />
        <TextView
            android:id="@+id/wind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="微风"
            android:textColor="@android:color/white"
            android:textSize="70dip"
            android:gravity="center"
            android:singleLine="true"
            android:layout_toRightOf="@id/qing"
            android:layout_marginTop="200sp"
            android:layout_marginLeft="40dip"/>
        <TextView
            android:id="@+id/day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="星期一"
            android:textColor="@android:color/white"
            android:textSize="50dip"
            android:layout_toRightOf="@id/qing"
            android:layout_marginTop="330sp"
            android:layout_marginLeft="34dip" />
        <TextView
            android:id="@+id/temperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="25~30℃"
            android:textColor="@android:color/white"
            android:textSize="50dip"
            android:layout_toRightOf="@id/qing"
            android:layout_marginTop="280dip"
            android:layout_marginLeft="17dip"/>
    </RelativeLayout>
</RelativeLayout>
